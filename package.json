{
    "name": "rxo-state",
    "version": "0.6.4",
    "description": "A reusable pattern for implementing reactive state management in web applications using RxJs.",
    "keywords": [
        "state",
        "reactive",
        "state management",
        "typescript",
        "javascript",
        "angular",
        "observable",
        "lightweight",
        "flexible",
        "framework agnostic"
    ],
    "type": "module",
    "files": [
        "dist"
    ],
    "main": "./dist/rxo-state.cjs",
    "module": "./dist/rxo-state.js",
    "types": "./dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/mitchgibson/rxo-state.git"
    },
    "scripts": {
        "build": "vite build",
        "dev": "npm link && vite build --mode development",
        "publish:test": "npm publish --dry-run",
        "test": "vitest run",
        "test:watch": "vitest watch",
        "docs": "open docs/index.html",
        "docs:generate": "typedoc src/index.ts",
        "test:verbose": "vitest run --reporter verbose",
        "version:patch": "npm version patch",
        "version:minor": "npm version minor",
        "version:major": "npm version major"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.62.0",
        "eslint": "^8.45.0",
        "eslint-config-standard-with-typescript": "^36.1.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-n": "^16.0.1",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-tsdoc": "^0.2.17",
        "typedoc": "^0.24.8",
        "typescript": "^5.0.2",
        "vite": "^5.0.12",
        "vite-plugin-dts": "^3.3.1",
        "vite-tsconfig-paths": "^4.2.0",
        "vitest": "^1.2.1"
    },
    "peerDependencies": {
        "rxjs": "^7.8.1"
    }
}
